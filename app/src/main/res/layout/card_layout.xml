<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/card_button"
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@drawable/clickable_rounded_shadow"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_pet_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="76dp"
                android:text="Pet:"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/card_profile_picture"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="1dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleView"
                app:srcCompat="@drawable/avatar_placeholder"
                app:strokeColor="#FFB82E"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/card_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/card_profile_picture"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_profile_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="2 Jun 2019"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/card_profile_picture"
                app:layout_constraintTop_toBottomOf="@+id/card_profile_name" />

            <TextView
                android:id="@+id/card_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="12dp"
                android:singleLine="true"
                android:text="Someone to look after my cat for next 2 months please ? please please"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_pet_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="76dp"
                android:text="Cat"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/card_pet_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_to_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:text="20-Nov-2022"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/card_to_label"
                app:layout_constraintTop_toBottomOf="@+id/card_from_value" />

            <TextView
                android:id="@+id/card_from_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:text="06-Nov-2022"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/card_from_label"
                app:layout_constraintTop_toBottomOf="@+id/card_pet_value" />

            <TextView
                android:id="@+id/card_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:text="From:"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_pet_label" />

            <TextView
                android:id="@+id/card_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:text="To:"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_from_label" />

            <TextView
                android:id="@+id/see_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:paddingStart="5sp"
                android:paddingEnd="5sp"
                android:text="See post"
                android:textColor="#FFB82E"
                android:textSize="11sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>